<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackWhite">


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/new_stroke"
        android:orientation="vertical">


        <TextView
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="포인트: "
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="연락처:"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="학번:"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="이메일:"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp" />


    </LinearLayout>

    <ImageView

        android:layout_width="56dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="582dp"

        />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:text="내 정보"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/blackTextColor"
        android:textSize="25sp" />



    <TextView

        android:id="@+id/username"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="120dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />
        <TextView

            android:id="@+id/textView5"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:text=" 님 "
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"

            android:text="환영합니다"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="130dp"
        android:background="@drawable/new_stroke"
        android:orientation="vertical">

    <TextView
        android:id="@+id/point1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint=""
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/phone_num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint=""
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/student_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint=""
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint=""
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="139dp"
        android:layout_height="132dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="39dp"
        android:text="     Job無Service"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorPrimaryDark1"
        android:textSize="35sp"
        tools:ignore="UnknownId" />

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:text="뒤로가기"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary1"
        />
</RelativeLayout>
